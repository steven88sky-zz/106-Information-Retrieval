<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nuk.information_retrieval_final_project">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        >
        <activity android:name=".MainMenu"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".cpe_activity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="com.nuk.information_retrieval_final_project.cpe_activity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".itsa_ptc_activity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="com.nuk.information_retrieval_final_project.itsa_ptc_activity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ncpc_activity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="com.nuk.information_retrieval_final_project.ncpc_activity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".acm_icpc_activity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="com.nuk.information_retrieval_final_project.acm_icpc_activity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>